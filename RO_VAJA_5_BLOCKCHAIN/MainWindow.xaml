<Window x:Class="RO_VAJA_5_BLOCKCHAIN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RO_VAJA_5_BLOCKCHAIN"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="930" Background="#2c2f33">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Center">
            <MenuItem Header="Nodes">
                <MenuItem x:Name="AddNodeBtn" Header="Add Node" Click="AddNodeBtn_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Block">
                <MenuItem x:Name="AddNewRandomBlock" Header="Add New Random Block" Click="AddNewRandomBlock_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Mining">
                <MenuItem x:Name="PauseBtn" Header="Pause" Click="PauseBtn_Click"></MenuItem>
                <MenuItem x:Name="ResumeBtn" Header="Resume" Click="ResumeBtn_Click"></MenuItem>
                <MenuItem x:Name="CostumDiff" Header="Costum Difficulty" Click="CostumDiff_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- make the font of the listview and all of its elements smaller-->
            
            <ListView Grid.Column="0" Name="LedgerListView" Background="#2C2F33" FontSize="10" Foreground="LightGray" BorderBrush="#2c2f33" 
            ItemsSource="{Binding Ledger}" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontSize="12" Grid.Row="0" Grid.Column="0" Content="{Binding Index}" ></Label>
                            <Label FontSize="12" Grid.Row="0" Grid.Column="1" Content="{Binding TimeStamp}"></Label>
                            <Label FontSize="12" Grid.Row="1" Grid.ColumnSpan="2" Content="{Binding Hash}"></Label>
                            <Label FontSize="12" Grid.Row="2" Grid.ColumnSpan="2" Content="{Binding PreviousHash}"></Label>
                            <Label FontSize="12" Grid.Row="3" Grid.ColumnSpan="2" Content="{Binding Data}"></Label>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView Grid.Column="1" Name="TextsListView" Background="#2C2F33" FontSize="10" Foreground="LightGray" BorderBrush="#2c2f33" 
            ItemsSource="{Binding blockchain.Connections}" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" FontSize="10" Content="{Binding RemoteNode.IP}"></Label>
                            <Label Grid.Row="1" FontSize="10" Content="{Binding RemoteNode.Port}"></Label>
                            <Label Grid.Row="2" FontSize="10" Content="{Binding RemoteNode.Id}"></Label>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="85"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="135"></ColumnDefinition>
                <ColumnDefinition Width="35"></ColumnDefinition>
                <ColumnDefinition Width="5"></ColumnDefinition>
                <ColumnDefinition Width="115"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label FontSize="16" Grid.Column="0">Local Standard Server Port:</Label>
            <Label FontSize="16" Grid.Column="1" Content="{Binding blockchain.StdServer.Port}"></Label>
            <Label FontSize="16" Grid.Column="3">Current Dificulty:</Label>
            <Label FontSize="16" Grid.Column="4" Content="{Binding blockchain.Difficulty}"></Label>
            <Label FontSize="16" Grid.Column="6" Content="Local Node Id: "></Label>
            <Label FontSize="16" Grid.Column="7" Content="{Binding blockchain.LocalNodeId}"></Label>
        </Grid>
    </Grid>
</Window>
